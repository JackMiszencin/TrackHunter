
<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :username, :class => 'text_field' %>
    </div>
  </div> 
  <div class="control-group">
    <%= f.label :password, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :password, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :account_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :account_id, :class => 'number_field' %>
    </div>
  </div> 
  <div class="control-group">
    <%= f.label :is_merchant, "Are you a merchant?", :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_merchant? %>
    </div>
  </div> 

  <div class="button-holder">
    <%= f.submit "Create User", :class => 'box-button', :class => 'mini-box-button' %>
    <%= link_to "Return to Login", accounts_login_path, :class => 'mini-box-button' %>
  </div>
<% end %> 