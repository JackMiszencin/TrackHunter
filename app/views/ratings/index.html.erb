<div class = "center_block" id="index_holder">
  <% if @current_user.is_admin == true %>
    <h2>All Ratings</h2>
    <%= render :partial => "table" %>
  <% elsif @current_user.is_merchant == true %>
    <h2>Your Stores' Ratings</h2>
    <%- @ratings = @merchant_ratings %>
    <%= render :partial => "table" %>
  <% end %>

  <h2>Your Ratings</h2>
  <%- @ratings = @user_ratings %>
  <%= render :partial => "table" %>

  <%= link_to 'New Rating', home_user_listener_path(@current_user) %>
</div>