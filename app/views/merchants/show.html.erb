<%- model_class = Merchant -%>
<div class = "center_block">
  <h2>Merchant Profile</h2>

  <dl class="dl-horizontal">
    <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
    <dd><%= @merchant.name %></dd>
    <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
    <dd><%= @merchant.address %></dd>  
    <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
    <dd><%= @merchant.city %></dd>  
    <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
    <dd><%= @merchant.state %></dd>  
    <dt><strong><%= model_class.human_attribute_name(:zip) %>:</strong></dt>
    <dd><%= @merchant.zip %></dd>  
  </dl>

  <div id="link_holder">
    <%= link_to "User Home", home_user_listener_path(@current_user)  %>
    <%="|"%>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_merchant_path(@merchant) %>
    <%="|"%>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
      merchant_path(@merchant),
      :method => 'delete',
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
  </div> 

</div>
